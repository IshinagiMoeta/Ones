<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bystanders.moeta.ones.fragment.HomeContentFragment">

    <ScrollView
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:padding="10dp"
                android:background="@drawable/view_yuan_morelist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout">

                <ImageView
                    android:src="@mipmap/default_indi_bg"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:id="@+id/home_image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="vol.1000"
                    android:textColor="#50000000"
                    android:id="@+id/home_vol"
                    android:layout_below="@+id/home_image"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="moeta 作品"
                    android:textColor="#50000000"
                    android:id="@+id/home_author"
                    android:layout_below="@+id/home_image"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000"
                    android:text="内容"
                    android:minLines="5"
                    android:lineSpacingExtra="10sp"
                    android:id="@+id/home_context"
                    android:layout_below="@+id/home_vol"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="23dp"
                    android:layout_marginBottom="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Mon 12 Sep.2016"
                    android:id="@+id/home_data"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <CheckBox
                android:text="10000"
                android:drawableLeft="@drawable/home_btn_bg_laud"
                android:button="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_good"
                android:layout_marginRight="90dp"
                android:layout_marginEnd="90dp"
                android:textColor="#50000000"
                android:layout_below="@+id/relativeLayout"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_readed"
                android:button="@null"
                android:textColor="#50000000"
                android:text="小记"
                android:layout_below="@+id/relativeLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:drawableLeft="@mipmap/diary"
                android:checked="false" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_share"
                android:src="@mipmap/share_image"
                android:layout_below="@+id/relativeLayout"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="19dp"
                android:layout_marginEnd="19dp" />

        </RelativeLayout>
    </ScrollView>


</FrameLayout>
