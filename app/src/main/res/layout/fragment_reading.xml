<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bystanders.moeta.ones.fragment.ReadingFragment">

    <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
        android:id="@+id/reading_broadcast_vp"
        android:layout_width="match_parent"
        android:layout_height="175dp">

    </cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager>

    <LinearLayout
        android:id="@+id/reading_broadcast_ponit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/reading_broadcast_vp"
        android:layout_marginBottom="30dp">

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:layout_below="@id/reading_broadcast_vp"
        android:id="@+id/reading_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</RelativeLayout>
