<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/main_search"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:src="@mipmap/search"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/main_title"
            android:layout_gravity="center"
            android:background="@mipmap/nav_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:id="@+id/main_individual"
            android:src="@mipmap/individual_center"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaaaaa"></LinearLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/main_fragment"
        android:layout_weight="36"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaaaaa">

    </LinearLayout>

    <RadioGroup
        android:layout_weight="4"
        android:id="@+id/main_rg"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <RadioButton
            android:id="@+id/main_rg_home"
            android:checked="true"
            style="@style/main_rg"
            android:background="@drawable/main_btn_bg_home" />

        <RadioButton
            android:id="@+id/main_rg_reading"
            style="@style/main_rg"
            android:background="@drawable/main_btn_bg_reading" />

        <RadioButton
            android:id="@+id/main_rg_music"
            style="@style/main_rg"
            android:background="@drawable/main_btn_bg_music" />

        <RadioButton
            android:id="@+id/main_rg_movie"
            style="@style/main_rg"
            android:background="@drawable/main_btn_bg_movie" />
    </RadioGroup>

</LinearLayout>
