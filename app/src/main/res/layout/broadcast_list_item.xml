<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="30dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="num"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:id="@+id/broadcast_list_num"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="title"
        android:textSize="20sp"

        android:textColor="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:id="@+id/broadcast_list_title"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/broadcast_list_num"
        android:layout_toEndOf="@+id/broadcast_list_num" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="author"
        android:textSize="15sp"
        android:textColor="#CCFFFFFF"
        android:layout_marginTop="5dp"
        android:id="@+id/broadcast_list_author"
        android:layout_below="@+id/broadcast_list_title"
        android:layout_alignLeft="@+id/broadcast_list_title"
        android:layout_alignStart="@+id/broadcast_list_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:minLines="2"
        android:textSize="15sp"
        android:lineSpacingExtra="12sp"
        android:text="Medium Text"
        android:textColor="#CCFFFFFF"
        android:id="@+id/broadcast_list_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/broadcast_list_author"
        android:layout_alignLeft="@+id/broadcast_list_author"
        android:layout_alignStart="@+id/broadcast_list_author" />
</RelativeLayout>